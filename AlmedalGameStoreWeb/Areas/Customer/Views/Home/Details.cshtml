@model Cart
<form method="post">
    <input hidden asp-for="ProductId" />
    <div class="card  container pt-4">
        <div class="card-header bg-primary text-light ml-0  row ">
            <div class="col-12 col-md-6">
                <h1 class="text-white-50">@Model.Product.Title</h1>
                <p class="text-warning">av @Model.Product.Publisher</p>
            </div>

            <div class="col-12 col-md-6 text-end pt-4">

                <span class="badge bg-warning pt-2" style="height:30px;">@Model.Product.Genre.Name</span>
            </div>
        </div>
        <div class="card-body row container">
            <div class="container rounded p-2">
                <div class="row">
                    <div class="col-8 col-lg-8">

                        <div class="row pl-2">
                            <h5 class="text-muted">REK ÅLDER : @Model.Product.PgRating år</h5>
                        </div>
                        <div class="row pl-2">
                            <h5 class="text-muted pb-2">Pris @Model.Product.Price.ToString("c")</h5>
                        </div>
                        <div class="row pl-2">
                            <h5 class="text-muted pb-2">Systemrekommendation @Model.Product.SystemReq</h5>
                        </div>
                        <div class="row pl-2">
                            <h5 class="text-muted pb-2">Utgivningsdatum @Model.Product.ReleaseDate.ToString("MMMM dd, yyyy")</h5>
                        </div>

                        <div class="row pl-2">
                            <p class="text-secondary">@Model.Product.Description</p>
                        </div>
                        <div class="row pl-2">
                            <div class="col-2 text-primary"><h4>Antal</h4></div>
                            <div class="col-10"><input asp-for="Count" id="item-count" class="form-control" /></div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-3 offset-lg-1 text-center">
                        <img src="@Model.Product.ImageUrl" width="100%" class="rounded" />
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a class="btn btn-success form-control " style="height:50px;"
                       asp-action="Index">Tillbaka till Produkter</a>
                </div>
                <div class="col-12 col-md-6 pb-1">
                    <button type="submit" value="Add to Cart" class="btn btn-primary form-control" style="height:50px;">Lägg i kundkorg</button>
                </div>
            </div>
        </div>
    </div>
</form>

