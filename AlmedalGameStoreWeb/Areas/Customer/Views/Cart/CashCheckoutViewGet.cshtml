@model AlmedalGameStore.Models.ViewModels.CartVM

<h1>Här är din order!</h1>

<form method="post">
<div class="container mt-5 mb-5">
    <div class="row d-flex justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="text-left logo p-2 px-5"> <img src="https://i.imgur.com/2zDU056.png" width="50"> </div>
                <div class="invoice p-5">
                    <h5>kontrollera din beställning</h5> <span class="font-weight-bold d-block mt-4">
                        Hej @Model.Order.Name
                    </span>
                    <div class="payment border-top mt-3 mb-3 border-bottom table-responsive">
                        <table class="table table-borderless">
                            <tbody>
                            <tr>
                                <td>
                                    <div class="py-2"> <span class="d-block text-muted">Payment</span> <span>Betala i butik <img src="https://img.icons8.com/color/48/000000/mastercard.png" width="20"/></span> </div>
                                </td>
                                <td>
                                    <div class="py-2"> <span class="d-block text-muted">Shiping Address</span> <span>Hämta i butik</span> </div>
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="product border-bottom table-responsive">
                        <table class="table table-borderless">
                            <tbody>
                            @foreach (var item in Model.ListCart)
                            {
                                <tr>
                                    <td width="0%"><img src="@item.Product.ImageUrl" class="rounded" width="100%"/> </td>
                                    <td width="60%"> <span class="font-weight-bold">@item.Product.Title</span>
                                        <div class="product-qty"> <span class="d-block">@item.Product.Publisher'</span></div>
                                    </td>
                                    <td width="20%">
                                        <div class="text-right"> <span class="font-weight-bold">@item.Product.Price.ToString("c")<span class="text-muted">&nbsp x &nbsp</span> @item.Count</span> </div>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                    <div class="row d-flex justify-content-end">
                        <div class="col-md-5">
                            <table class="table table-borderless">
                                <tbody class="totals">
                                <tr>
                                    <td>
                                        <div class="text-left"> <span class="text-muted">Total Pris</span> </div>
                                    </td>
                                    <td>
                                        <div class="text-right"> <span>@Model.Order.OrderTotal.ToString("c")</span></div>
                                    </td>
                                    

                                </tr>
                                <tr>
                                    <td>
                                        <div class="text-left"> <span class="text-muted">Fraktavgift</span> </div>
                                    </td>
                                    <td>
                                        <div class="text-right"> <span>0 Kr</span> </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <div class="text-left"> <span class="text-muted">Rabatt</span> </div>
                                    </td>
                                    <td>
                                        <div class="text-right"> <span class="text-success">0 kr</span> </div>
                                    </td>
                                </tr>
                                <tr class="border-top border-bottom">
                                    <td>
                                            <div class="text-left"> <span class="text-muted">SlutSumma</span> </div>
                                        </td>
                                        <td>
                                            <div class="text-right"> <span class="font-weight-bold">@Model.Order.OrderTotal.ToString("c")</span> </div>
                                        </td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="container-lg">
                        <p>Välkommen till vår butik för att hämta din beställning</p>
                        <p class="fw-bold mb-0">Tack för att du handlar med oss</p> <span>Almedal Game Store Team!</span>
                        <div class="text-end">
                            <a id="cancel" asp-action="Checkout" class="btn btn-danger me-3">Gå tillbaka</a>
                            <button type="submit" asp-controller="Cart" asp-action="CashCeckoutPOST" class="btn btn-success">Slutföra ditt köp</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</form>