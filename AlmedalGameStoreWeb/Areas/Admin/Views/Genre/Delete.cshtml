@*Vi vill fetcha genre properties som vi skapar här
    om man inte passar något value inuti sin controller som t.ex. create så kan man binda sin vy med model
    som är baseread på datan man hämtar från sidan med hjälp av tag-helpers
*@
@model Genre
<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class"border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete genre</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
      
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="Genre" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Bakåt till lista
        </a>
    </div>
</form>
@section Scripts{
    @*added partial view (Client side validation)*@
<partial name="_ValidationScriptsPartial" />
}



