@*man behöver capture vår model vi passar från vår controller så här viktigt med model med litet m*@
@model IEnumerable<Genre>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Genre List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Genre" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Skapa ny Genre
            </a>
        </div>
    </div>
    <br /> <br />

    <table class="table table-border table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Genre Name
                </th>
                <th>
                    Display Order
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @*här vill vi ha en foreach som itererar genom vår IEnumerable för att kunna displaya values*@
            @foreach (var obj in Model)
            {
                <tr>
                    <td wisth="50%">
                        @obj.Name
                    </td>
                  
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Genre" asp-action="Edit" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="Genre" asp-action="Delete" asp-route-id="@obj.Id"
                           class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>